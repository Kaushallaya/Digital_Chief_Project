<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_dialog_contact">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR FEEDBACK"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreenDark"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Feel free to give your suggestion and complain"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/fbName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_txt_home"
        android:drawableEnd="@drawable/ic_people"
        android:elevation="5dp"
        android:hint="Your name"
        android:textSize="15dp"
        android:paddingHorizontal="20dp" />

    <EditText
        android:id="@+id/fbfeedback"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_txt_home"
        android:elevation="5dp"
        android:hint="Your Feedback"
        android:inputType="textMultiLine"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="top"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">


        <RatingBar
            android:id="@+id/fbratingBar"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/devider"
            android:progressTint="@color/colorGreenSpc"
            android:numStars="5"
            android:rating="3.5"
            android:layout_gravity="end"/>


    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_btn_home"
        android:text="ADD NOW"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="addnow"/>

</LinearLayout>